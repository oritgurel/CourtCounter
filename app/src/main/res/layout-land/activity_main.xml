<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B9E2F0"
    android:layoutDirection="ltr"
    >

<LinearLayout

    android:id="@+id/action_container"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:orientation="horizontal"
    android:gravity="center|top"
    android:layout_margin="16dp"
    xmlns:tools="http://schemas.android.com/tools">

<LinearLayout
    android:id="@+id/team_a"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/player_a"
        android:textSize="12sp"
        android:textColor="@color/team"
        android:gravity="center"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/team_a_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:gravity="center"
        tools:text="3"
        android:textSize="20sp"
        android:textColor="@color/colorScore">

    </TextView>
    <Button
        android:id="@+id/threePoints_A"
        android:drawableLeft="@drawable/rock_win_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="44dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="8dp"
        android:text="@string/_3_points"/>

    <Button
        android:id="@+id/twoPoints_A"
        android:drawableLeft="@drawable/scissors_win_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="44dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="8dp"
        android:text="@string/_2_points"/>

    <Button
        android:id="@+id/freeThrow_A"
        android:drawableLeft="@drawable/paper_win_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="44dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="8dp"
        android:text="@string/free_throw"/>
</LinearLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@color/colorPrimaryDark">

    </View>

    <LinearLayout
        android:id="@+id/team_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/player_b"
            android:textColor="@color/team"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/team_b_score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:textColor="@color/colorScore"
            android:textSize="20sp"
            tools:text="3"
            />

        <Button
            android:id="@+id/threePoints_B"
            android:drawableLeft="@drawable/rock_win_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="44dp"
            android:layout_marginBottom="8dp"
            android:text="@string/_3_points"/>

        <Button
            android:id="@+id/twoPoints_B"
            android:drawableLeft="@drawable/scissors_win_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="44dp"
            android:layout_marginBottom="8dp"
            android:text="@string/_2_points"/>

        <Button
            android:id="@+id/freeThrow_B"
            android:drawableLeft="@drawable/paper_win_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="44dp"
            android:layout_marginBottom="8dp"
            android:text="@string/free_throw"/>
    </LinearLayout>


</LinearLayout>

    <Button
    android:id="@+id/reset_button"
    android:text="@string/Reset"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/action_container"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="-55dp"

        />

    <TextView
        android:id="@+id/win_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#d50000"
        android:visibility="invisible"
        android:text="Win!"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_toRightOf="@id/reset_button"
        android:layout_below="@id/action_container"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="-50dp"

        />

    <TextView
        android:id="@+id/win_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#d50000"
        android:visibility="invisible"
        android:text="Win!"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_toLeftOf="@id/reset_button"
        android:layout_below="@id/action_container"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="75dp"
        android:layout_marginTop="-50dp"

        />

</RelativeLayout>

